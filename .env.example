# Environment Configuration Examples
# Copy to .env and configure for your environment

# Core AuroraOS Configuration
NODE_ENV=development

# Mastra Configuration (if integrating with existing flows)
MASTRA_API_KEY=your_mastra_api_key_here
MASTRA_BASE_URL=https://api.mastra.ai

# Database Configuration (for Mastra workflows)
DATABASE_URL=postgresql://user:pass@localhost:5432/auroraos
LIBSQL_URL=file:local.db

# External Integrations
OPENAI_API_KEY=sk-your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Slack Integration (for existing triggers)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Telegram Integration (for existing triggers)  
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Ethics & Compliance
ETHICS_PROTOCOL=Picard_Delta_3
DLP_DEFAULT_CLASSIFICATION=DLP_L1_OK

# Symbolic System Configuration
DEFAULT_ANCHOR=T1_AURORA_CORE
DEFAULT_SRB_TAGS=SRB_AURORA_CORE,SRB_EXPORT
SEAL_ALGORITHM=SHA256

# Drift Monitoring
DRIFT_THRESHOLD=0.8
DRIFT_LOG_LEVEL=debug

# Development/Testing
TEST_ANCHOR=T1_TEST
TEST_SRB_TAGS=SRB_TEST,SRB_DEV